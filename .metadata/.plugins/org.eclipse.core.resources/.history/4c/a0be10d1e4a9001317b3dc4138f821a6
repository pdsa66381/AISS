import java.math.BigInteger;
import java.util.Random;

public class RandomGen {

	public int genRandInput(int max_size){
		byte[] result = new byte[128];
		
		BigInteger b;
		
		Random r = new Random();
		
		do{
			r.nextBytes(result);
			b=new BigInteger(result);
		
		}while(b.doubleValue() < 0
				&& (b.doubleValue() < Math.pow(2, 32)
						|| b.doubleValue() > Math.pow(2, 1024)));
		
		System.out.println(b);
		
		return 0;
	}
	
}
